{
  "private": true,
  "name": "{{ project-name }}",
  "version": "1.0.0",
  "description": "A template for kick starting a Cloudflare Workers project",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "tsc -noEmit && esbuild src/index.ts --format=esm --bundle --minify --outfile=dist/index.mjs",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --fix 'src/**/*.{json,mjs,js,ts}'"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "author": "{{ authors }}",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
